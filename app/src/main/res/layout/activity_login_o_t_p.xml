<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/apptheme"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout"
    tools:context=".LoginOTP">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/auth_phrase"
        android:textAlignment="center"
        android:textSize="@dimen/activity_margin_17sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/activity_margin_10dp"
        android:layout_marginTop="@dimen/activity_margin_30dp"
        android:layout_marginStart="@dimen/activity_margin_20dp"
        android:layout_marginEnd="@dimen/activity_margin_20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="@dimen/activity_margin_10dp">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/activity_margin_0dp">


            <LinearLayout
                android:id="@+id/declare1id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_10dp"
                android:background="@drawable/bordercardiew"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/activity_margin_10dp"
                android:layout_marginTop="@dimen/activity_margin_0dp"
                android:layout_marginBottom="@dimen/activity_margin_0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:layout_marginTop="@dimen/activity_margin_25dp"
                    android:text="@string/otp_verification"
                    android:textColor="@color/black"
                    android:textSize="@dimen/activity_margin_24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_margin_50dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbars="horizontal|vertical">

                    <TextView
                        android:id="@+id/txtotp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="serif"
                        android:text="@string/otp_sent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_18sp" />
                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6"
                    android:layout_marginStart="@dimen/activity_margin_15dp"
                    android:layout_marginEnd="@dimen/activity_margin_15dp"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/otp_edit_text_1"
                        android:layout_width="@dimen/activity_margin_40dp"
                        android:layout_height="@dimen/activity_margin_40dp"
                        android:background="@drawable/rectborder"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/activity_margin_5dp"
                        android:maxLines="1"
                        android:maxLength="1"
                        android:layout_weight="1"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/otp_edit_text_2"
                        android:layout_width="@dimen/activity_margin_40dp"
                        android:layout_height="@dimen/activity_margin_40dp"
                        android:background="@drawable/rectborder"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/activity_margin_5dp"
                        android:maxLines="1"
                        android:maxLength="1"
                        android:layout_weight="1"
                        android:singleLine="true"  />

                    <EditText
                        android:id="@+id/otp_edit_text_3"
                        android:layout_width="@dimen/activity_margin_40dp"
                        android:layout_height="@dimen/activity_margin_40dp"
                        android:background="@drawable/rectborder"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/activity_margin_5dp"
                        android:maxLines="1"
                        android:maxLength="1"
                        android:layout_weight="1"
                        android:singleLine="true"  />

                    <EditText
                        android:id="@+id/otp_edit_text_4"
                        android:layout_width="@dimen/activity_margin_40dp"
                        android:layout_height="@dimen/activity_margin_40dp"
                        android:background="@drawable/rectborder"
                        android:inputType="number"
                        android:layout_margin="@dimen/activity_margin_5dp"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:maxLength="1"
                        android:layout_weight="1"
                        android:singleLine="true"  />

                    <EditText
                        android:id="@+id/otp_edit_text_5"
                        android:layout_width="@dimen/activity_margin_40dp"
                        android:layout_height="@dimen/activity_margin_40dp"
                        android:background="@drawable/rectborder"
                        android:inputType="number"
                        android:layout_margin="@dimen/activity_margin_5dp"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:maxLength="1"
                        android:layout_weight="1"
                        android:singleLine="true"  />

                    <EditText
                        android:id="@+id/otp_edit_text_6"
                        android:layout_width="@dimen/activity_margin_40dp"
                        android:layout_height="@dimen/activity_margin_40dp"
                        android:background="@drawable/rectborder"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/activity_margin_5dp"
                        android:maxLines="1"
                        android:maxLength="1"
                        android:layout_weight="1"
                        android:singleLine="true"  />

                </LinearLayout>

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_margin_0dp"
                    android:layout_marginTop="@dimen/activity_margin_20dp"
                    android:layout_marginEnd="@dimen/activity_margin_0dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbars="horizontal|vertical">

                    <EditText
                        android:id="@+id/editphOTP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_0dp"
                        android:background="@drawable/rectborder"
                        android:inputType="number"
                        android:padding="@dimen/activity_margin_10dp" />
                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.widget.Button
                        android:id="@+id/BtnVerifyotp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_margin_20dp"
                        android:background="@drawable/roundedbutton"
                        android:padding="@dimen/activity_margin_6dp"
                        android:text="@string/verify_otp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/activity_margin_20sp"
                        android:textStyle="bold"
                        app:backgroundTint="@color/apptheme" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/OTPseconds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_30dp"
                    android:layout_marginBottom="@dimen/activity_margin_20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbars="vertical">

                    <TextView
                        android:id="@+id/txtotpdetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="@string/otp_wait"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_14sp" />

                    <TextView
                        android:id="@+id/txtotptimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_10dp"
                        android:fontFamily="serif"
                        android:text="@string/_00_59"
                        android:textColor="@color/purple_500"
                        android:textSize="@dimen/activity_margin_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/resendotlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_20dp"
                    android:layout_marginTop="@dimen/activity_margin_30dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:scrollbarStyle="outsideInset"
                    android:scrollbars="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtdidnotreceive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="@string/otp_not_received"
                        android:textColor="@color/black"
                        android:textSize="@dimen/activity_margin_14sp" />

                    <TextView
                        android:id="@+id/txtresendotp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_margin_10dp"
                        android:fontFamily="serif"
                        android:text="@string/resend_otp"
                        android:textColor="@color/purple_500"
                        android:textSize="@dimen/activity_margin_14sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>